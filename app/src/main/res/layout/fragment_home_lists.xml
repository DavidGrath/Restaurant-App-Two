<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.HomeSearchFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textview_home_trending_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending this week"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/textview_home_trending_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_home_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most popular"
                android:layout_alignParentStart="true"/>
            <!--            TODO Add character that looks like >> -->
            <TextView
                android:id="@+id/textview_home_popular_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 places"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <include layout="@layout/recyclerview_popular_restaurant" android:id="@+id/include_home_most_popular"/>
        <TextView
            android:id="@+id/textview_home_latest_feeds_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest Feeds"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_home_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>