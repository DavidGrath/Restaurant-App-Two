<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RestaurantAppTwo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pale_green</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="actionMenuTextAppearance">@style/ToolbarActionMenuTextAppearance</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:progressTint">@color/gold</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
<!--        https://stackoverflow.com/a/31194172/7876958 comment from https://stackoverflow.com/users/11105280/max-->
        <item name="materialButtonStyle">@style/ButtonStyle</item>
<!--        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>-->
<!--        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>-->
    </style>
    <style name="SplashTheme" parent="Theme.RestaurantAppTwo">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="TextLargeTitle" parent="Theme.RestaurantAppTwo">
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTitle" parent="Theme.RestaurantAppTwo">
        <item name="android:textSize">@dimen/font_size_sub_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextTitleSmaller" parent="Theme.RestaurantAppTwo">
        <item name="android:textSize">@dimen/font_size_paragraph</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextContent" parent="Theme.RestaurantAppTwo">
        <item name="android:textSize">@dimen/font_size_semi_paragraph</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="CheckGroup" parent="Theme.RestaurantAppTwo">
        <item name="android:textSize">@dimen/font_size_semi_paragraph</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:checkMark">@drawable/ic_baseline_done_24</item>
        <item name="android:checkMarkTint">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/space_size_2</item>
        <item name="android:layout_marginBottom">@dimen/space_size_2</item>
    </style>
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTextStyle</item>
        <item name="android:titleTextAppearance">@style/ToolbarTextStyle</item>
        <item name="android:paddingTop">@dimen/space_size_3</item>
        <item name="android:paddingBottom">@dimen/space_size_3</item>
<!--        The letter 'g' will get cut off on the bottom if I don't do this-->
        <item name="android:clipToPadding">false</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="minHeight">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>
    <style name="ToolbarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ToolbarStyle.White">
        <item name="titleTextColor">@color/black</item>
        <item name="background">@color/light_grey</item>
        <item name="android:background">@color/light_grey</item>
        <item name="colorOnPrimary">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">?attr/colorPrimary</item>
        <item name="elevation">4dp</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="Theme.RestaurantAppTwo.WhiteToolbarActivity">
        <item name="actionMenuTextColor">?attr/colorPrimary</item>
        <item name="android:actionMenuTextColor">?attr/colorPrimary</item>
        <item name="actionMenuTextAppearance">@style/ToolbarActionMenuTextAppearance</item>
        <item name="toolbarStyle">@style/ToolbarStyle.White</item>
    </style>
    <style name="ToolbarActionMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/space_size_3</item>
        <item name="android:paddingBottom">@dimen/space_size_3</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ButtonStyle.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="LoginCreateAccountTheme" parent="Theme.RestaurantAppTwo">
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>